<body>
  <div class="container">
    <h1>🎰 Slot Game KW</h1>

    <div id="slot">
      <span id="s1">❓</span>
      <span id="s2">❓</span>
      <span id="s3">❓</span>
    </div>

    <p id="result">Klik SPIN untuk bermain</p>

    <p>💰 Saldo: <span id="saldo">3000</span></p>
    <p>🎯 Taruhan: <span id="taruhan">250</span></p>

    <div style="margin: 10px 0;">
      <button onclick="ubahTaruhan(-50)">-</button>
      <button onclick="ubahTaruhan(50)">+</button>
    </div>

    <button onclick="spin()">SPIN</button>

    <div style="margin-top: 20px;">
      <p>🔁 Auto Spin:</p>
      <button onclick="autoSpin(10)">Auto 10</button>
      <button onclick="autoSpin(30)">Auto 30</button>
      <button onclick="autoSpin(50)">Auto 50</button>
      <button onclick="autoSpin(100)">Auto 100</button>
    </div>
  </div>

  <script>
    let saldo = 3000;
    let bet = 250;
    const symbols = ["🍒", "🍋", "🍊", "💎", "🔔", "🍇", "🥝", "🥥", "🍉", "🍍", "🥭", "🍓"];

    let autoCount = 0;
    let autoDelay = 1200;
    let autoRunning = false;

    function spin(auto = false) {
      if (saldo < bet) {
        alert("Saldo tidak cukup!");
        autoRunning = false;
        return;
      }

      saldo -= bet;

      const r1 = symbols[Math.floor(Math.random() * symbols.length)];
      const r2 = symbols[Math.floor(Math.random() * symbols.length)];
      const r3 = symbols[Math.floor(Math.random() * symbols.length)];

      document.getElementById("s1").textContent = "⏳";
      document.getElementById("s2").textContent = "⏳";
      document.getElementById("s3").textContent = "⏳";
      document.getElementById("result").textContent = "Memutar...";

      setTimeout(() => document.getElementById("s1").textContent = r1, 300);
      setTimeout(() => document.getElementById("s2").textContent = r2, 600);

      setTimeout(() => {
        document.getElementById("s3").textContent = r3;

        let hadiah = 0;
        let result = "Zonk 😢";

        const isJackpot = (r1 === "💎" && r2 === "💎" && r3 === "💎");

        if (isJackpot) {
          hadiah = bet * 8;
          result = `⚡ MAXWIN 💎 +${hadiah}`;
          animateSaldo(saldo, saldo + hadiah, () => {
            if (autoRunning) {
              autoCount--;
              setTimeout(jalankanAutoSpin, autoDelay);
            }
          });
          return;
        }

        if (r1 === "🔔" && r2 === "🔔" && r3 === "🔔") {
          hadiah = bet * 5;
          saldo += hadiah;
          result = `✨ JACKPOT SEDERHANA 🔔 +${hadiah}`;
        } else if (r1 === r2 || r2 === r3 || r1 === r3) {
          hadiah = bet * 2;
          saldo += hadiah;
          result = `👍 Menang Kecil +${hadiah}`;
        }

        document.getElementById("saldo").textContent = saldo;
        document.getElementById("result").textContent = result;

        if (autoRunning) {
          autoCount--;
          setTimeout(jalankanAutoSpin, autoDelay);
        }
      }, 900);
    }

    function animateSaldo(start, end, callback) {
      let current = start;
      const step = Math.ceil((end - start) / 50);
      const interval = setInterval(() => {
        current += step;
        if (current >= end) {
          current = end;
          clearInterval(interval);
          if (callback) callback();
        }
        saldo = current;
        document.getElementById("saldo").textContent = saldo;
      }, 20);
    }

    function ubahTaruhan(nilai) {
      bet += nilai;
      if (bet < 100) bet = 100;
      if (bet > 10000) bet = 10000;
      document.getElementById("taruhan").textContent = bet;
    }

    function autoSpin(jumlah) {
      if (autoRunning) return;
      autoCount = jumlah;
      autoRunning = true;
      jalankanAutoSpin();
    }

    function jalankanAutoSpin() {
      if (autoCount <= 0) {
        autoRunning = false;
        return;
      }
      spin(true);
    }
  </script>
